<div id="svgContainer" class="header-bg" style="position: absolute; z-index: -1; top: 0; left: 0;">
    <svg xmlns="http://www.w3.org/2000/svg" width="800" height="200">
        <!-- 背景色を追加 -->
        <rect width="100%" height="100%" fill="#eeeeee" stroke="black" stroke-width="10"/>

    </svg>
</div>

@inject IJSRuntime JsRuntime
@code {
    protected override async Task OnAfterRenderAsync(bool firstRender) {
        if (firstRender) {
            await JsRuntime.InvokeVoidAsync("onLoadIndexPage");
        }
    }
}
